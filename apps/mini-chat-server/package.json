{
  "name": "@mini-chat/mini-chat-server",
  "version": "0.0.1",
  "private": true,
  "type": "commonjs",
  "scripts": {
    "start": "node dist/main.js",
    "dev": "tsx watch src/main.ts",
    "build": "tsc -p tsconfig.json",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:verbose": "jest --verbose",
    "test:ci": "jest --ci --coverage --maxWorkers=2",
    "prisma:generate": "prisma generate",
    "prisma:push": "prisma db push",
    "prisma:studio": "prisma studio"
  },
  "nx": {
    "targets": {
      "build": {
        "executor": "@nx/esbuild:esbuild",
        "outputs": [
          "{options.outputPath}"
        ],
        "defaultConfiguration": "production",
        "options": {
          "platform": "node",
          "outputPath": "apps/mini-chat-server/dist",
          "format": [
            "cjs"
          ],
          "bundle": true,
          "thirdParty": false,
          "main": "apps/mini-chat-server/src/main.ts",
          "tsConfig": "apps/mini-chat-server/tsconfig.app.json",
          "assets": [
            "apps/mini-chat-server/src/assets"
          ],
          "esbuildOptions": {
            "sourcemap": true,
            "outExtension": {
              ".js": ".js"
            }
          }
        },
        "configurations": {
          "development": {
            "bundle": false
          },
          "production": {
            "bundle": true,
            "thirdParty": false,
            "generateLockfile": true,
            "esbuildOptions": {
              "sourcemap": false,
              "outExtension": {
                ".js": ".js"
              }
            }
          }
        }
      },
      "prune-lockfile": {
        "dependsOn": [
          "build"
        ],
        "cache": true,
        "executor": "@nx/js:prune-lockfile",
        "outputs": [
          "{workspaceRoot}/apps/mini-chat-server/dist/package.json",
          "{workspaceRoot}/apps/mini-chat-server/dist/package-lock.json"
        ],
        "options": {
          "buildTarget": "build"
        }
      },
      "copy-workspace-modules": {
        "dependsOn": [
          "build"
        ],
        "cache": true,
        "outputs": [
          "{workspaceRoot}/apps/mini-chat-server/dist/workspace_modules"
        ],
        "executor": "@nx/js:copy-workspace-modules",
        "options": {
          "buildTarget": "build"
        }
      },
      "prune": {
        "dependsOn": [
          "prune-lockfile",
          "copy-workspace-modules"
        ],
        "executor": "nx:noop"
      },
      "serve": {
        "continuous": true,
        "executor": "@nx/js:node",
        "defaultConfiguration": "development",
        "dependsOn": [
          "build"
        ],
        "options": {
          "buildTarget": "@mini-chat/mini-chat-server:build",
          "runBuildTargetDependencies": false
        },
        "configurations": {
          "development": {
            "buildTarget": "@mini-chat/mini-chat-server:build:development"
          },
          "production": {
            "buildTarget": "@mini-chat/mini-chat-server:build:production"
          }
        }
      },
      "test": {
        "executor": "@nx/jest:jest",
        "outputs": [
          "{workspaceRoot}/test-output/jest/coverage/mini-chat-server"
        ],
        "options": {
          "jestConfig": "apps/mini-chat-server/jest.config.ts",
          "passWithNoTests": true
        },
        "configurations": {
          "ci": {
            "ci": true,
            "coverage": true,
            "maxWorkers": 2
          }
        }
      },
      "docker:build": {
        "dependsOn": [
          "build",
          "prune"
        ]
      }
    }
  },
  "dependencies": {
    "@mini-chat/backend-common-layer": "*",
    "@mini-chat/shared-types": "*",
    "@prisma/client": "^6.1.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.21.2"
  },
  "devDependencies": {
    "@swc/jest": "~0.2.38",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^30.0.0",
    "@types/node": "^20.0.0",
    "jest": "^30.0.2",
    "jest-mock-extended": "^3.0.7",
    "prisma": "^6.1.0",
    "ts-jest": "^29.4.0",
    "tsx": "^4.7.0",
    "typescript": "^5.3.0"
  }
}