{
  "compilerOptions": {
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "importHelpers": true,
    "isolatedModules": true,
    "moduleResolution": "nodenext",
    "lib": ["es2022"],
    "skipLibCheck": true,
    "strict": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitOverride": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "esModuleInterop": true,
    "module": "nodenext",
    "allowSyntheticDefaultImports": true,
    "target": "es2022",
    "customConditions": ["@mini-chat/source"],
    "baseUrl": ".",
    "paths": {
      "@mini-chat/shared-types": ["libs/shared/types/src/index.ts"],
      "@mini-chat/shared-utils": ["libs/shared/utils/src/index.ts"],
      "@mini-chat/shared-config": ["libs/shared/config/src/index.ts"],
      "@mini-chat/backend-common-layer": ["libs/backend/common-layer/src/index.ts"],
      "@mini-chat/frontend-ui": ["libs/frontend/ui/src/index.tsx"]
    }
  }
}